# Environment Configuration
# Copy to .env and fill in values for local development

# Mode
APP_ENV=development
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/logs/system.log

# Security
MAX_SCAN_TIMEOUT=60
RATE_LIMIT_REQUESTS_PER_MINUTE=5
RATE_LIMIT_REQUESTS_PER_HOUR=50
RATE_LIMIT_REQUESTS_PER_DAY=200
RATE_LIMIT_TARGET_PER_HOUR=1

# Model Paths
ML_MODEL_PATH=data/models/latest
RL_MODEL_PATH=data/models/rl_latest
SHAP_EXPLAINER_PATH=data/models/shap_explainer.pkl

# API (if enabled)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database (optional)
DATABASE_URL=sqlite:///data/deepai.db
# DATABASE_URL=postgresql://user:password@localhost:5432/deepai

# Feature Flags
ENABLE_DEEP_SCAN=false
ENABLE_ACTIVE_ANALYSIS=false
ACADEMIC_MODE=true
ENFORCE_RATE_LIMITS=true
LOG_AUDIT_EVENTS=true
